=render partial: 'users/shared/top_contents', locals: { title: I18n.t("attributes.title.confirm"),
                                                               title_en: I18n.t("attributes.title.confirm_en") }
=render partial: 'users/shared/page_tabs', locals: { tabs: { I18n.t("attributes.title.login") =>  new_user_session_path,
                                                             I18n.t("attributes.title.new") =>  new_user_registration_path } }
.main_contents.confirm
  = form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f|
    .input_form
      =render partial: 'users/shared/user_form', locals: { user: @user }
      .field
        %label= I18n.t("attributes.password")
        %p ********
      =render partial: 'users/shared/confirm', locals: { user: @user, f: f }
      = f.hidden_field :password, value: @user.password
      = f.hidden_field :password_confirmation, value: @user.password
    .actions
      = f.submit I18n.t("attributes.back"), class: "btn back", name: :back
      = f.submit I18n.t("attributes.registration"), class: "btn"