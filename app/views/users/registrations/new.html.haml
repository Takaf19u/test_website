%h2 Sign up
-# = form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f|
= form_with model: @user, url: users_sign_up_confirm_path(@user), local: true do |f|
  = f.fields_for :user_detail do |detail|
    .field
      = detail.label I18n.t("attributes.name")
      %br
      = detail.text_field :name, autofocus: true, placeholder: I18n.t("attributes.placeholder.name")
    .field
      = detail.label I18n.t("attributes.company_name")
      %br
      = detail.text_field :company_name, placeholder: I18n.t("attributes.placeholder.company_name")
    .field
      = detail.label I18n.t("attributes.department_name")
      %br
      = detail.text_field :department_name, placeholder: I18n.t("attributes.placeholder.department_name")
    .field
      = detail.label I18n.t("attributes.phone_number")
      %br
      = detail.text_field :phone_number, placeholder: I18n.t("attributes.placeholder.phone_number")
  .field
    = f.label :email
    %br
    = f.text_field :email, autocomplete: "email", placeholder: I18n.t("attributes.placeholder.email")
  .field
    = f.label :password
    %br
    = f.text_field :password, autocomplete: "new-password", placeholder: I18n.t("attributes.placeholder.password")
  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  .actions
    = f.submit I18n.t("attributes.confirm")
= render "users/shared/links"
