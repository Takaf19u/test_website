%h2 Sign up
-# = form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f|
= form_with model: @user, url: users_sign_up_confirm_path(@user), local: true do |f|
  =render partial: 'users/shared/user_input_form', locals: { user: @user, f: f }
  .field
    = f.label :password
    %br
    = f.text_field :password, autocomplete: "new-password", placeholder: I18n.t("attributes.placeholder.password")
    = render partial: "users/shared/error_messages", locals: { errors: @user.errors.full_messages_for("password") }
  .field
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
  .actions
    = f.submit I18n.t("attributes.confirm")
= render "users/shared/links"
