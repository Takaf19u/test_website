.devise_contents
  %h1= I18n.t("attributes.login")
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field.alert
      = alert
      - if @errors["email"].present?
        %p.alert= @errors["email"]
      - if @errors["password"].present?
        %p.alert= @errors["password"]
    .field.input
      = f.label :email
      %br
      = f.text_field :email, autofocus: true, autocomplete: "email"
    .field.password.input
      = f.label :password
      %br
      = f.text_field :password, type: :password, autocomplete: "current-password"
      %input{type:"checkbox", class: "js-password"}
      = icon("far", "eye")
    - if devise_mapping.rememberable?
      .field.remenber_me
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit I18n.t("attributes.login")
